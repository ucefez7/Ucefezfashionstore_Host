<script>
    function confirmBlock(couponId) {
        Swal.fire({
            title: 'Are you sure?',
            text: 'You are about to block this coupon!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, block it!',
            cancelButtonText: 'Cancel',
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/block-coupon/${couponId}`;
            }
        });
    }

    function confirmUnblock(couponId) {
        Swal.fire({
            title: 'Are you sure?',
            text: 'You are about to unblock this coupon!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, unblock it!',
            cancelButtonText: 'Cancel',
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/admin/unblock-coupon/${couponId}`;
            }
        });
    }
</script>
