    <script>
        const submitButton = document.getElementById("submitButton");
    
        submitButton.addEventListener("click", function (e) {
            e.preventDefault();
    
            // Reset previous error messages
            resetErrorMessages();
    
            const oldpassword = document.querySelector('input[name="oldpassword"]').value.trim();
            const newpassword = document.querySelector('input[name="newpassword"]').value.trim();
            const confirmpassword = document.querySelector('input[name="confirmpassword"]').value.trim();
    
            // Check if any field is empty or contains only whitespace
            if (oldpassword === '' || newpassword === '' || confirmpassword === '') {
                displayError('All fields are required', 'oldpassword');
                return;
            }
    
            // Validate password length and uniqueness
            if (newpassword.length < 6 || /^(.)\1+$/.test(newpassword)) {
                displayError('Password must be at least 6 characters and should be strong', 'newpassword');
                return false;
            }
    
            // Check if new password and confirm password match
            if (newpassword !== confirmpassword) {
                displayError('New password and confirm password do not match', 'confirmpassword');
                return;
            }
    
            // Check if passwords meet the conditions
            if (!isValidPassword(newpassword)) {
                displayError('Password should be at least 6 characters long and not contain whitespace', 'newpassword');
                return;
            }
    
            fetch('/post-changedpswd', {
                method: 'POST',
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ oldpassword, newpassword, confirmpassword })
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.message) {
                        swal.fire({
                            position: 'top-center',
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 1500
                        })
                        window.location.href = '/account';
                    }
                    if (data.IncorrectOld) {
                        displayError("Incorrect old password", 'oldpassword');
                    }
                    if (data.samepassword) {
                        displayError("Change your password", 'newpassword');
                    }
                })
                .catch(error => {
                    console.log(error);
                    // Handle other errors if needed
                });
        });
    
        function displayError(message, fieldName) {
            const errorDiv = document.createElement('div');
            errorDiv.className = 'error-message text-danger';
            errorDiv.textContent = message;
    
            const field = document.querySelector(`[name="${fieldName}"]`);
            field.parentNode.appendChild(errorDiv);
        }
    
        function resetErrorMessages() {
            const errorMessages = document.querySelectorAll('.error-message');
            errorMessages.forEach(message => message.remove());
        }
    
        function isValidPassword(password) {
            // Check if the password is at least 6 characters long and does not contain whitespace
            return password.length >= 6 && !/\s/.test(password);
        }
    </script>
    

